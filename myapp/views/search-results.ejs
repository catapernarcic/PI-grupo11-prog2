<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/maquitecLogo.png" />

	<title> Maquitec</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/css/app.css">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:ital,wght@0,100..700;1,100..700&family=Shadows+Into+Light&family=Special+Gothic+Expanded+One&display=swap" rel="stylesheet">
</head>

<body>
	<!-- Header -->
	<% if (usuario) { %>
		<%- include('partials/headerLogueado') %>
	 <% } else {%> 
		<%- include('partials/headerNoLogueado') %>
	<% } %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<!-- Show the "ultimos" products -->
			 <% if (productos.length === 0) { %>
			  <h3>No hay resultados para su busqueda </h3>
			 <% } else { %>
			<h2 class="col-12" Resultados para: <%= texto %> > 
				<% productos.forEach(producto => { %> 
				<div>
					<a href="/products/detalle/<%= producto.id %>">
						<h3><%= producto.nombre %></h3>
						<img src="<%= producto.imagen %>" alt="<%= producto.nombre %>">
					</a>
					<img src="<%= producto.imagen %>" alt="<%= producto.nombre %>">
					<p><%= producto.descripcion %></p>
					<p><strong>Cargado por:</strong> 
						<% if (producto.user) { %>
						  <a href="/users/<%= producto.user.id %>"><%= producto.user.email %></a>
						<% } else { %>
						  Usuario no disponible
						<% } %>
					  </p>
				</div>
				<% }) %>
			</h2>
			<% } %>


	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>

</html>